Relation.prototype = new Node();
Relation.prototype.constructor=Relation;

/**
* Relation 
* @constructor
*/
function Relation(id, label, node0, node1, directed){
	Node.apply(this, [id, label]);
	this.node0=node0;
	this.node1=node1;
	this.directed=directed?directed:false;
}
Relation.prototype.getNode0 = function() {
  return this.node0;
}
Relation.prototype.getNode1 = function() {
  return this.node1;
}
//overriding:
Relation.prototype.draw = function(context) {
    context.fillStyle    = '#00FF00';

  	context.font         = 'italic 16px sans-serif';
  	context.textBaseline = 'top';
  	context.fillText(this.name, 0, 50, 700);
};